<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/couponColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/zone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coupon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zone1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/coupon6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/coupon10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:scaleType="fitXY"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/cou_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>

