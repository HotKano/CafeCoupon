<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#caece4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/zone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3ba990"
        android:padding="10dp">

        <ImageView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/couponlogo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/zone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zone1"
        android:background="#3ba990"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/coupon_use" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/txt1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/use_coupon"
        android:text="커피 이미지" />

    <TextView
        android:id="@+id/state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:gravity="center"
        android:text=""
        android:textSize="20dp"
        android:textStyle="italic|bold" />


    <LinearLayout
        android:id="@+id/zone3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state_text"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#39c2a1"
            android:text="확인"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scroll"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#39c2a1"
            android:text="닫기"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

    </LinearLayout>




</RelativeLayout>