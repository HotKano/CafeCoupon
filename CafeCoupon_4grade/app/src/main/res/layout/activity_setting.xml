<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/info" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#3ba990" />

        <RelativeLayout
            android:id="@+id/member_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9eaea"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settingName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:background="#e9eaea"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/img" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c7c7c7" />

        <RelativeLayout
            android:id="@+id/txtbtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9eaea"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/goodbye"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/space" />

        </RelativeLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/alarm" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#3ba990" />

        <RelativeLayout
            android:id="@+id/txtbtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9eaea"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/pushalram"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/pushonoff"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/on" />

        </RelativeLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/locationsetting" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#3ba990" />

        <RelativeLayout
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9eaea"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/stand"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/space" />

        </RelativeLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/support" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#3ba990" />

        <RelativeLayout
            android:id="@+id/txtbtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9eaea"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="82dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/policy"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/space" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c7c7c7" />

        <RelativeLayout
            android:id="@+id/txtbtn5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e9eaea"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="61dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:src="@drawable/center"
                android:scaleType="centerInside" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/space" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>