<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39c2a1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/logozone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/login1">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/onlylogo2" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/idzone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/nickname"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/nickname" />

            <EditText
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_below="@+id/nickname"
                android:background="@drawable/loginplate"
                android:inputType="text|textCapCharacters"
                android:maxLength="7"
                android:scaleType="fitCenter" />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idzone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/email"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/email" />


            <EditText
                android:id="@+id/emailedit"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_below="@+id/email"
                android:background="@drawable/loginplate"
                android:inputType="textWebEmailAddress"
                android:scaleType="fitCenter" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/login1"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:alpha="255"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/register" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>